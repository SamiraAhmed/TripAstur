<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:showDividers="middle" >

	<fragment class="es.uniovi.imovil.jcgranda.courses.CourseListFragment"
		android:id="@+id/course_list_frag"
		android:layout_width="0dp"
		android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/course_details_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
		
		<fragment class="es.uniovi.imovil.jcgranda.courses.CourseDetailsFragment"
			android:id="@+id/course_details_frag"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
		
	</FrameLayout>

</LinearLayout>